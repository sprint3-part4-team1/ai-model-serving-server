# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# Seasonal Story API Keys
OPENWEATHER_API_KEY=YOUR_API_KEY_HERE
NAVER_CLIENT_ID=
NAVER_CLIENT_SECRET=

# Instagram Graph API (SNS 트렌드 수집용)
# 설정 방법: https://developers.facebook.com/docs/instagram-api/getting-started
INSTAGRAM_ACCESS_TOKEN=YOUR_ACCESS_TOKEN_HERE
INSTAGRAM_BUSINESS_ACCOUNT_ID=

# Model Settings
SD_MODEL_ID=stabilityai/stable-diffusion-xl-base-1.0
SD_REFINER_ID=stabilityai/stable-diffusion-xl-refiner-1.0

# Performance
USE_XFORMERS=true
USE_TORCH_COMPILE=false
ENABLE_CPU_OFFLOAD=false

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=true

# Optimization
TENSORRT_ENABLED=false
VLLM_GPU_MEMORY_UTIL=0.9

# Cache
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379

# Logging
LOG_LEVEL=INFO

# MLFlow
MLFLOW_ENABLED=false
MLFLOW_TRACKING_URI=http://localhost:5000
