# Application Settings
APP_NAME="소상공인 광고 콘텐츠 생성 서비스"
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=4

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
HUGGINGFACE_TOKEN=your_huggingface_token_here

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/adcontent_db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Security
SECRET_KEY=your_secret_key_here_change_this_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=True

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,webp
UPLOAD_DIR=./data/uploads

# Model Settings
MODEL_CACHE_DIR=./data/models
STABLE_DIFFUSION_MODEL=stabilityai/stable-diffusion-xl-base-1.0
CONTROLNET_MODEL=lllyasviel/control_v11p_sd15_canny
LORA_DIR=./data/lora_models

# Generation Settings
DEFAULT_IMAGE_WIDTH=1024
DEFAULT_IMAGE_HEIGHT=1024
MAX_IMAGE_WIDTH=2048
MAX_IMAGE_HEIGHT=2048
DEFAULT_NUM_INFERENCE_STEPS=50
MAX_NUM_INFERENCE_STEPS=100
DEFAULT_GUIDANCE_SCALE=7.5

# Performance
USE_XFORMERS=True
ENABLE_CPU_OFFLOAD=False
USE_HALF_PRECISION=True

# Caching
CACHE_TTL=3600  # 1 hour
ENABLE_RESULT_CACHE=True

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_ROTATION=500 MB
LOG_RETENTION=10 days

# Rate Limiting
RATE_LIMIT_PER_MINUTE=30
RATE_LIMIT_PER_HOUR=500

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090
